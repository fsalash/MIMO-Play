@(listaRecetas:List[Recipe])
        <?xml version="1.0" encoding="UTF-8">
<recetas>
    @for(rec<-listaRecetas){
    <receta>
        <nombre>  @rec.getNombre()</nombre>
        <ingredientes>
            @for(ing<-rec.getIngredientes()){
                <ingrediente>
                    @ing.getNombre()
                </ingrediente>
                <cantidad>
                    @ing.getCantidad()
                </cantidad>
            }
        </ingredientes>

        <autor>
            <nombre>@rec.getAutor().getNombre()</nombre>
            <apellidos>@rec.getAutor().getApellidos()</apellidos>
            <nacionalidad>@rec.getAutor().getNacionalidad()</nacionalidad>
        </autor>

        <posicion>  @rec.getPosicion().getIdPosicion()</posicion>
        <complejidad>  @rec.getPosicion().getComplejidad()</complejidad>
        <pasos>@rec.getExplicacion()</pasos>
    </receta>
    }
</recetas>